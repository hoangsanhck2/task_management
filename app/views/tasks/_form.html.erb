<%= form_for @task do |f| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <table class="table">
      <tr>
        <td><%= f.label :"#{t(:name)}" %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :"#{t(:priority)}" %></td>
        <td><%= f.select :priority , @listpriority %></td>
      </tr>
      <tr>
        <td><%= f.label :"#{t(:name_project)}" %></td>
        <td><%= f.select :project_id, @project %></td>
      </tr>
      <tr>
        <td><%= label_tag(:start_date, "#{t(:start_date)}") %></td>
        <td><%= f.date_field :start_date  %></td>
      </tr>
      <tr>
        <td><%= label_tag(:end_date, "#{t(:end_date)}") %></td>
        <td><%= f.date_field :end_date %></td>
      </tr>
      <tr>
        <td><%= f.label :"#{t(:status)}" %></td>
        <td>
        <%= f.select :status , @hash_status[t(k)] %>
        </td>
      </tr>
  </table>
  <p>
    <%= f.submit  :class => "btn btn-primary"  %>
  </p>
<% end %>